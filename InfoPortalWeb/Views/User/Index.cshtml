@model List<InfoPortalWeb.Models.Content>

@{
    ViewData["Title"] = "Home";
    var checkSession = ViewBag.checkSession;
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<h1>Welcome to the User Dashboard</h1>

@if (checkSession != null)
{
    <p>Hello, @checkSession</p>
    <ul>
        @foreach (var content in Model)
        {
            <li class="card card-body mt-5" >
                <h5>
                <a href="@Url.Action("Details", new { ID = content.ID })" class="card-title">@content.Title</a>
                </h5>
                <p>@content.Description</p>
            </li>
        }
    </ul>
}
else
{
    <p>Please <a href="@Url.Action("Login")" >login</a> to view content.</p>
}

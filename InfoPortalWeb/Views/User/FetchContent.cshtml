@model List<InfoPortalWeb.Models.FAQ>

@{
    ViewData["Title"] = "FAQs";
    var checkSession = ViewBag.checkSession;
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<h1>Frequently Asked Questions</h1>

@if (checkSession != null)
{
    <ul>
        @foreach (var faq in Model)
        {
            <li>
                <strong>@faq.Quesiton</strong>
                <p>@faq.Answer</p>
            </li>
        }
    </ul>
}
else
{
    <p>Please <a href="@Url.Action("Login")">login</a> to view FAQs.</p>
}
